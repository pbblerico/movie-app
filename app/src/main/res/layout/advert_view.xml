<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/solid_base_white"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="5dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/advTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advert"
        android:paddingVertical="3dp"
        android:textColor="@color/dark_1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/advImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/advTitle"
        app:layout_constraintBottom_toTopOf="@id/advText"
        android:src="@color/white"/>

    <TextView
        android:id="@+id/advText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="@string/advert"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/dark_1"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>